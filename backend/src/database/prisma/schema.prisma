// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Civilian {
  id              String           @default(uuid()) @id
  username        String           @unique
  email           String           @unique
  password        String
  createdAt       DateTime         @default(now())
  role            String           @default("civilian")
  reports         Report[]
  distressSignals DistressSignal[]
  missingPersons  MissingPerson[]
  Post            Post[]
}

model Criminal {
  id   String @default(uuid()) @id
  firstName  String
  lastName String
  wantedFor  String[]
  imageUrl  String[]
  police    Police@relation(fields: [policeId], references: [id])
  policeId  String
}


model Police {
  id   String @default(uuid()) @id
  firstName  String
  lastName String
  email     String   @unique
  password  String
  badgeNumber  String
  rank  String
  role  String @default("police-admin")
  department  String
  forums      Forum[]  @relation("ForumOwner")
  criminal Criminal[]
  }

model MissingPerson {
  id   String @default(uuid()) @id
  firstName  String
  lastName String
  age      Int
  lastSeen  String
  dateMissing  String
  imageUrl  String
  civilian    Civilian @relation(fields: [civilianId], references: [id])
  civilianId  String
  }

model DistressSignal{
  id   String @default(uuid()) @id
  latitude  Float
  longitude Float
  message  String
  createdAt DateTime @default(now())
  civilian    Civilian @relation(fields: [civilianId], references: [id])
  civilianId  String
}

model Report{
  id String @default(uuid()) @id 
  reportType String
  message String
  createdAt DateTime @default(now())
  civilian    Civilian @relation(fields: [civilianId], references: [id])
  civilianId  String
}


model Forum {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  owner       Police  @relation("ForumOwner", fields: [ownerId], references: [id])
  ownerId     String
  posts       Post[]  @relation("ForumPosts")
}

model Post {
  id          Int     @id @default(autoincrement())
  content     String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  forum       Forum   @relation("ForumPosts", fields: [forumId], references: [id])
  forumId     Int
  author      Civilian @relation(fields: [authorId], references: [id])
  authorId    String
}