generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Civilian {
  id        String   @default(uuid()) @id
  username  String    @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      String   @default("civilian")

}

model Criminal {
  id   String @default(uuid()) @id
  firstName  String
  lastName String
  wantedFor  String[]
  imageUrl  String[]
}


model Police {
  id   String @default(uuid()) @id
  firstName  String
  lastName String
  email     String   @unique
  password  String
  badgeNumber  String
  rank  String
  role  String @default("police-admin")
  }

model MissingPerson {
  id   String @default(uuid()) @id
  firstName  String
  lastName String
  age      Int
  lastSeen  String
  dateMissing  String
  imageUrl  String
  }

model DistressSignal{
  id   String @default(uuid()) @id
  latitude  Float
  longitude Float
  signalImage  String
}

